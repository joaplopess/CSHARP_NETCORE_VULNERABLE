@{
    ViewData["Title"] = "SSRF Demo";
}

<h2>Fetch URL Content (SSRF Demo)</h2>

<form method="get" action="/Ssrf/FetchUrl">
    <div class="form-group">
        <label for="url">URL to fetch:</label>
        <input type="text" class="form-control" id="url" name="url" value="http://example.com">
    </div>
    <button type="submit" class="btn btn-primary">Fetch</button>
</form>

@if (ViewBag.Content != null)
{
    <h3>Content:</h3>
    <pre>@ViewBag.Content</pre>
}

<p>Try: http://localhost/admin or file:///etc/passwd</p>